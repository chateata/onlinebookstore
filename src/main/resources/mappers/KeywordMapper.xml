<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shop.bookshop.dao.KeywordMapper">
  <resultMap id="BaseResultMap" type="com.shop.bookshop.pojo.Keyword">
    <id column="keyword_id" property="keywordId" />
    <result column="word" property="word" />
  </resultMap>
  <sql id="Base_Column_List">keyword_id, word</sql>
  <select id="selectByKeywordId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select <include refid="Base_Column_List" /> from keyword where keyword_id = #{keywordId}
  </select>
  <insert id="insert" parameterType="com.shop.bookshop.pojo.Keyword" useGeneratedKeys="true" keyProperty="keywordId">
    insert into keyword (word) values (#{word})
  </insert>
  <update id="updateByKeywordId" parameterType="com.shop.bookshop.pojo.Keyword">
    update keyword set word = #{word} where keyword_id = #{keywordId}
  </update>
  <delete id="deleteByKeywordId" parameterType="java.lang.Integer">
    delete from keyword where keyword_id = #{keywordId}
  </delete>
</mapper>


