<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shop.bookshop.dao.AuthorMapper">
  <resultMap id="BaseResultMap" type="com.shop.bookshop.pojo.Author">
    <id column="author_id" property="authorId" />
    <result column="name" property="name" />
    <result column="bio" property="bio" />
  </resultMap>
  <sql id="Base_Column_List">author_id, name, bio</sql>
  <select id="selectByAuthorId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select <include refid="Base_Column_List" /> from author where author_id = #{authorId}
  </select>
  <insert id="insert" parameterType="com.shop.bookshop.pojo.Author" useGeneratedKeys="true" keyProperty="authorId">
    insert into author (name, bio) values (#{name}, #{bio})
  </insert>
  <update id="updateByAuthorId" parameterType="com.shop.bookshop.pojo.Author">
    update author
    <set>
      <if test="name != null">name = #{name},</if>
      <if test="bio != null">bio = #{bio},</if>
    </set>
    where author_id = #{authorId}
  </update>
  <delete id="deleteByAuthorId" parameterType="java.lang.Integer">
    delete from author where author_id = #{authorId}
  </delete>
</mapper>


