<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shop.bookshop.dao.PurchaseOrderItemMapper">
  <resultMap id="BaseResultMap" type="com.shop.bookshop.pojo.PurchaseOrderItem">
    <id column="po_item_id" property="poItemId" />
    <result column="po_id" property="poId" />
    <result column="book_id" property="bookId" />
    <result column="quantity" property="quantity" />
    <result column="unit_price" property="unitPrice" />
    <result column="shortage_id" property="shortageId" />
    <result column="received_quantity" property="receivedQuantity" />
  </resultMap>
  <sql id="Base_Column_List">po_item_id, po_id, book_id, quantity, unit_price, shortage_id, received_quantity</sql>
  <select id="selectByPoItemId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select <include refid="Base_Column_List" /> from purchase_order_item where po_item_id = #{poItemId}
  </select>
  <select id="selectByPoId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select <include refid="Base_Column_List" /> from purchase_order_item where po_id = #{poId}
  </select>
  <insert id="insert" parameterType="com.shop.bookshop.pojo.PurchaseOrderItem" useGeneratedKeys="true" keyProperty="poItemId">
    insert into purchase_order_item (po_id, book_id, quantity, unit_price, shortage_id, received_quantity)
    values (#{poId}, #{bookId}, #{quantity}, #{unitPrice}, #{shortageId}, #{receivedQuantity})
  </insert>
  <update id="updateByPoItemId" parameterType="com.shop.bookshop.pojo.PurchaseOrderItem">
    update purchase_order_item
    <set>
      <if test="receivedQuantity != null">received_quantity = #{receivedQuantity},</if>
    </set>
    where po_item_id = #{poItemId}
  </update>
</mapper>


