<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shop.bookshop.dao.OrderItemMapper">
  <resultMap id="BaseResultMap" type="com.shop.bookshop.pojo.OrderItem">
    <id column="order_item_id" jdbcType="INTEGER" property="orderItemId" />
    <result column="order_id" jdbcType="INTEGER" property="orderId" />
    <result column="book_id" jdbcType="INTEGER" property="bookId" />
    <result column="price" jdbcType="DECIMAL" property="price" />
    <result column="quantity" jdbcType="INTEGER" property="quantity" />
    <result column="unit_price" jdbcType="DECIMAL" property="unitPrice" />
    <result column="subtotal" jdbcType="DECIMAL" property="subtotal" />
    <result column="shipped_quantity" jdbcType="INTEGER" property="shippedQuantity" />
    <association property="book_info" javaType="com.shop.bookshop.pojo.Book" column="book_id"
                 select="com.shop.bookshop.dao.BookMapper.selectByBookId"/>
  </resultMap>
  <sql id="Base_Column_List">
    order_item_id, order_id, book_id, price, quantity, unit_price, subtotal, shipped_quantity
  </sql>
  <select id="selectByOrderId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from order_item
    where order_id = #{orderId,jdbcType=INTEGER}
  </select>
  <insert id="insert" parameterType="com.shop.bookshop.pojo.OrderItem">
    insert into order_item (order_id, book_id, price, quantity, unit_price, subtotal, shipped_quantity)
    values ( #{orderId,jdbcType=INTEGER}, #{bookId,jdbcType=INTEGER},
      #{price,jdbcType=DECIMAL}, #{quantity,jdbcType=INTEGER}, #{unitPrice,jdbcType=DECIMAL}, #{subtotal,jdbcType=DECIMAL},
      <choose>
        <when test="shippedQuantity != null">#{shippedQuantity,jdbcType=INTEGER}</when>
        <otherwise>0</otherwise>
      </choose>)
  </insert>
  <update id="updateByOrderIdAndBookId" parameterType="com.shop.bookshop.pojo.OrderItem">
    update order_item
    <set>
      <if test="price != null">
        price = #{price,jdbcType=DECIMAL},
      </if>
      <if test="quantity != null">
        quantity = #{quantity,jdbcType=INTEGER},
      </if>
      <if test="unitPrice != null">
        unit_price = #{unitPrice,jdbcType=DECIMAL},
      </if>
      <if test="subtotal != null">
        subtotal = #{subtotal,jdbcType=DECIMAL},
      </if>
      <if test="shippedQuantity != null">
        shipped_quantity = #{shippedQuantity,jdbcType=INTEGER},
      </if>
    </set>
    where order_id = #{orderId,jdbcType=INTEGER} and book_id = #{bookId,jdbcType=INTEGER}
  </update>
</mapper>