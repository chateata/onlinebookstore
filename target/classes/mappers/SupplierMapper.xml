<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shop.bookshop.dao.SupplierMapper">
  <resultMap id="BaseResultMap" type="com.shop.bookshop.pojo.Supplier">
    <id column="supplier_id" property="supplierId" />
    <result column="name" property="name" />
    <result column="contact" property="contact" />
    <result column="address" property="address" />
  </resultMap>
  <sql id="Base_Column_List">supplier_id, name, contact, address</sql>
  <select id="selectBySupplierId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select <include refid="Base_Column_List" /> from supplier where supplier_id = #{supplierId}
  </select>
  <select id="selectAll" resultMap="BaseResultMap">
    select <include refid="Base_Column_List" /> from supplier order by supplier_id
  </select>
  <insert id="insert" parameterType="com.shop.bookshop.pojo.Supplier" useGeneratedKeys="true" keyProperty="supplierId">
    insert into supplier (name, contact, address) values (#{name}, #{contact}, #{address})
  </insert>
  <update id="updateBySupplierId" parameterType="com.shop.bookshop.pojo.Supplier">
    update supplier
    <set>
      <if test="name != null">name = #{name},</if>
      <if test="contact != null">contact = #{contact},</if>
      <if test="address != null">address = #{address},</if>
    </set>
    where supplier_id = #{supplierId}
  </update>
  <delete id="deleteBySupplierId" parameterType="java.lang.Integer">
    delete from supplier where supplier_id = #{supplierId}
  </delete>
</mapper>
