<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shop.bookshop.dao.SupplierBookMapper">
  <resultMap id="BaseResultMap" type="com.shop.bookshop.pojo.SupplierBook">
    <id column="supplier_book_id" property="supplierBookId" />
    <result column="supplier_id" property="supplierId" />
    <result column="series_id" property="seriesId" />
    <result column="isbn" property="isbn" />
    <result column="title" property="title" />
    <result column="author" property="author" />
    <result column="press" property="press" />
    <result column="price" property="price" />
    <result column="supply_price" property="supplyPrice" />
    <result column="description" property="description" />
    <result column="status" property="status" />
    <result column="create_time" property="createTime" />
    <result column="update_time" property="updateTime" />
  </resultMap>

  <resultMap id="WithSupplierResultMap" type="com.shop.bookshop.pojo.SupplierBook" extends="BaseResultMap">
    <association property="supplier" column="supplier_id" select="com.shop.bookshop.dao.SupplierMapper.selectBySupplierId" />
    <association property="series" column="series_id" select="com.shop.bookshop.dao.SeriesMapper.selectBySeriesId" />
  </resultMap>

  <sql id="Base_Column_List">
    supplier_book_id, supplier_id, series_id, isbn, title, author, press, price, supply_price, description, status, create_time, update_time
  </sql>

  <delete id="deleteBySupplierBookId" parameterType="java.lang.Integer">
    delete from supplier_book where supplier_book_id = #{supplierBookId}
  </delete>

  <insert id="insert" parameterType="com.shop.bookshop.pojo.SupplierBook" useGeneratedKeys="true" keyProperty="supplierBookId">
    insert into supplier_book (supplier_id, series_id, isbn, title, author, press, price, supply_price, description, status, create_time, update_time)
    values (#{supplierId}, #{seriesId}, #{isbn}, #{title}, #{author}, #{press}, #{price}, #{supplyPrice}, #{description}, #{status}, #{createTime}, #{updateTime})
  </insert>

  <select id="selectBySupplierBookId" parameterType="java.lang.Integer" resultMap="WithSupplierResultMap">
    select <include refid="Base_Column_List" /> from supplier_book where supplier_book_id = #{supplierBookId}
  </select>

  <update id="updateBySupplierBookId" parameterType="com.shop.bookshop.pojo.SupplierBook">
    update supplier_book
    <set>
      <if test="supplierId != null">supplier_id = #{supplierId},</if>
      <if test="isbn != null">isbn = #{isbn},</if>
      <if test="title != null">title = #{title},</if>
      <if test="author != null">author = #{author},</if>
      <if test="press != null">press = #{press},</if>
      <if test="price != null">price = #{price},</if>
      <if test="supplyPrice != null">supply_price = #{supplyPrice},</if>
      <if test="description != null">description = #{description},</if>
      <if test="status != null">status = #{status},</if>
      <if test="updateTime != null">update_time = #{updateTime},</if>
    </set>
    where supplier_book_id = #{supplierBookId}
  </update>

  <select id="selectAll" resultMap="WithSupplierResultMap">
    select <include refid="Base_Column_List" /> from supplier_book order by create_time desc
  </select>

  <select id="selectBySupplierId" parameterType="java.lang.Integer" resultMap="WithSupplierResultMap">
    select <include refid="Base_Column_List" /> from supplier_book where supplier_id = #{supplierId} order by create_time desc
  </select>

  <select id="selectByIsbn" parameterType="java.lang.String" resultMap="WithSupplierResultMap">
    select <include refid="Base_Column_List" /> from supplier_book where isbn like concat('%', #{isbn}, '%') order by create_time desc
  </select>

  <select id="selectByTitle" parameterType="java.lang.String" resultMap="WithSupplierResultMap">
    select <include refid="Base_Column_List" /> from supplier_book where title like concat('%', #{title}, '%') order by create_time desc
  </select>
</mapper>

