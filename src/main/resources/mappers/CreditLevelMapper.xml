<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shop.bookshop.dao.CreditLevelMapper">
  <resultMap id="BaseResultMap" type="com.shop.bookshop.pojo.CreditLevel">
    <id column="level_id" property="levelId" />
    <result column="level_name" property="levelName" />
    <result column="discount_rate" property="discountRate" />
    <result column="overdraft_limit" property="overdraftLimit" />
    <result column="description" property="description" />
  </resultMap>
  <sql id="Base_Column_List">level_id, level_name, discount_rate, overdraft_limit, description</sql>
  <select id="selectByLevelId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select <include refid="Base_Column_List" /> from credit_level where level_id = #{levelId}
  </select>
  <insert id="insert" parameterType="com.shop.bookshop.pojo.CreditLevel" useGeneratedKeys="true" keyProperty="levelId">
    insert into credit_level (level_name, discount_rate, overdraft_limit, description)
    values (#{levelName}, #{discountRate}, #{overdraftLimit}, #{description})
  </insert>
  <update id="updateByLevelId" parameterType="com.shop.bookshop.pojo.CreditLevel">
    update credit_level
    <set>
      <if test="levelName != null">level_name = #{levelName},</if>
      <if test="discountRate != null">discount_rate = #{discountRate},</if>
      <if test="overdraftLimit != null">overdraft_limit = #{overdraftLimit},</if>
    </set>
    where level_id = #{levelId}
  </update>
</mapper>


